{
    "compilerOptions": {
        "target": "es5",
        "module": "esNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "baseUrl": "./",
        "removeComments": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "paths": {
            "~/*": ["src/*"],
            "*": ["node_modules/*", "src/*"]
        },
        "lib": ["es2017", "esnext", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
